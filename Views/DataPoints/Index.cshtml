@model Financa.Models.DataPoints
@{
}


<div class="row">
    <div class="col-md-5 col-xs-12 offset-md-1">
        <div id="chartValorInvestido" ></div>
    </div>
    <div class="col-md-5 col-xs-12">
        <div id="chartQuantidadeAcoesEmpresa" ></div>
    </div>
</div>

<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

<script>
window.onload = function () {

    var chart = new CanvasJS.Chart("chartValorInvestido", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "Total Investido por Empresa"
	},
    axisX: {
        title: "Empresas"
    },
	axisY: {
		title: "Em R$"
	},
	data: [{
		type: "column",
        indexLabel: "{y}",
		dataPoints: @Html.Raw(ViewBag.TotalPorEmpresa)
	}]
});

	chart.render();

    chart = new CanvasJS.Chart("chartQuantidadeAcoesEmpresa", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "Quantidade de Ações por Empresa"
	},
    axisX: {
        title: "Empresas"
    },
	axisY: {
		title: "Em R$"
	},
	data: [{
		type: "column",
        indexLabel: "{y}",
		dataPoints: @Html.Raw(ViewBag.QuantidadeAcoes)
	}]
});

chart.render();

}
</script>
