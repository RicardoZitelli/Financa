@model Financa.Models.DataPoints
@{
}



<div style="position:relative">
    <div id="chartValorInvestido" style="height: 370px; width:49%; position:absolute;left:0;border: 1px solid #000"></div>

    <div id="chartQuantidadeAcoesEmpresa" style="height: 370px; width:49%;position:absolute; right:0;border: 1px solid #000;margin-left:10px;"></div>
</div>


<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

<script>
window.onload = function () {

    var chart = new CanvasJS.Chart("chartValorInvestido", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "Total Investido por Empresa"
	},
    axisX: {
        title: "Empresas"
    },
	axisY: {
		title: "Em R$"
	},
	data: [{
		type: "column",
        indexLabel: "{y}",
		dataPoints: @Html.Raw(ViewBag.TotalPorEmpresa)
	}]
});

	chart.render();

    chart = new CanvasJS.Chart("chartQuantidadeAcoesEmpresa", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "Quantidade de Ações por Empresa"
	},
    axisX: {
        title: "Empresas"
    },
	axisY: {
		title: "Em R$"
	},
	data: [{
		type: "column",
        indexLabel: "{y}",
		dataPoints: @Html.Raw(ViewBag.QuantidadeAcoes)
	}]
});

chart.render();

}
</script>
