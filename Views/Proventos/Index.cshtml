@model IEnumerable<Financa.Models.Provento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataFechamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorCarteira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRecebido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PorcentagemReferenteAoMes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataFechamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorCarteira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalRecebido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PorcentagemReferenteAoMes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
