<h4>
    <table class='table'>
        <tr>
            <th>Ação</th>
            <th>Ticker</th>
            <th>Preço</th>
            <th>Mudança Percentual</th>
        </tr>
        <tr>
            <td>
                @Model.ShortName
            </td>
            <td>
                @Model.Ticker
            </td>
            <td>
                @Model.Bid.ToString("C")
            </td>
            @if (Model.RegularMarketChangePercent > 0)
            {
                <td style='color:#155724;'>
                    @Model.RegularMarketChangePercent.ToString("n2")%
                </td>
            }
            else
            {
                <td style='color: #721c24;'>
                    @Model.RegularMarketChangePercent.ToString("n2")%
                </td>
            }
        </tr>
    </table>
</h4>

