@model Financa.Models.Investimento

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Investimento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Corretora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Corretora.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empresa.Ticker)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoCompra)
        </dt>
        <dd class="col-sm-10">
            @{string parameterValue = @Html.FormatValue(Model.PrecoCompra, "{0:C}"); }
            @Html.DisplayFor(modelItem => parameterValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoVenda)
        </dt>
        <dd class="col-sm-10">
            @{parameterValue = @Html.FormatValue(Model.PrecoVenda, "{0:C}"); }
            @Html.DisplayFor(modelItem => parameterValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Corretagem)
        </dt>
        <dd class="col-sm-10">
            @{parameterValue = @Html.FormatValue(Model.Corretagem, "{0:C}"); }
            @Html.DisplayFor(modelItem => parameterValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Voltar para  a Lista</a>
</div>
