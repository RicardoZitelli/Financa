@{
    ViewData["Title"] = "Home Page";
}



<div class="text-center">

</div>


<div style="position:relative">
    <div id="chartValorInvestido" style="height: 370px; width: 50%; position:absolute;left:0"></div>

    <div id="chartContainer2" style="height: 370px; width: 50%;position:absolute; right:0"></div>
</div>


<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

<script>
window.onload = function () {

    var chart = new CanvasJS.Chart("chartValorInvestido", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "Total Investido por Empresa"
	},
    axisX: {
        title: "Empresas"
    },
	axisY: {
		title: "Em R$"
	},
	data: [{
		type: "column",
		dataPoints: @Html.Raw(ViewBag.DataPoints)
	}]
});

	chart.render();

	 chart = new CanvasJS.Chart("chartContainer2", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "Total Investido por Empresa"
	},
    axisX: {
        title: "Empresas"
    },
	axisY: {
		title: "Em R$"
	},
	data: [{
		type: "column",
		dataPoints: @Html.Raw(ViewBag.DataPoints)
	}]
});

chart.render();

}
</script>